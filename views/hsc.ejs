<script>
    $(document).ready(function () {
        $('.accordion-header').click(function () {
            var $header = $(this);
            var $content = $header.next('.accordion-content');

            // Handle subject clicks
            if ($header.hasClass('accordion-header') && $header.parent().hasClass('accordion-subject')) {
                // Close all chapters under other subjects
                $('.accordion-subject').not($header.parent()).find('.accordion-content').slideUp();
                $('.accordion-chapter').not($header.parent().find('.accordion-chapter')).find('.accordion-content').slideUp();

                // Toggle the current subject
                $content.slideToggle();
                $header.toggleClass('active');
            }
            
            // Handle chapter clicks
            if ($header.hasClass('accordion-header') && $header.parent().hasClass('accordion-chapter')) {
                // Close all other chapters and their content
                $header.closest('.accordion-subject').find('.accordion-chapter').not($header.parent()).find('.accordion-content').slideUp();

                // Toggle the current chapter and its content
                $content.slideToggle();
                $header.toggleClass('active');
            }
        });

        // Load JSON data based on group
        $(document).ready(function() {
            var group = '<%= group %>';

            var fileName = group === 'science' ? 'hsc-science.json' :
                           group === 'commerce' ? 'hsc-commerce.json' :
                           group === 'arts' ? 'hsc-arts.json' : 
                           null;

            if (fileName) {
                $.getJSON('/data/' + fileName, function(data) {
                    let html = '';

                    $.each(data, function(subject, chapters) {
                        html += `<div class="accordion accordion-subject">
                                    <button class="accordion-header">
                                        ${subject}
                                        <span class="accordion-arrow"></span>
                                    </button>
                                    <div class="accordion-content">`;

                        $.each(chapters, function(index, chapter) {
                            const chapterTitle = Object.keys(chapter)[0];
                            const teachers = chapter[chapterTitle];

                            html += `<div class="accordion accordion-chapter">
                                        <button class="accordion-header">
                                            ${chapterTitle}
                                        </button>
                                        <div class="accordion-content">
                                            <div class="teacher-list">`;

                            $.each(teachers, function(teacher, videos) {
                                // Sanitize and encode parameters
                                const encodedSubject = encodeURIComponent(subject);
                                const encodedChapterTitle = encodeURIComponent(chapterTitle);
                                const encodedTeacher = encodeURIComponent(teacher);

                                html += `<a href="/hsc/${group}/lecture?subject=${encodedSubject}&chapter=${encodedChapterTitle}&teacher=${encodedTeacher}">${teacher}</a>`;
                            });

                            html += `       </div>
                                        </div>
                                    </div>`;
                        });

                        html += `   </div>
                                </div>`;
                    });

                       $('#accordion-container').html(html);

                    $('.accordion-header').on('click', function() {
                        $(this).toggleClass('active');
                        $(this).next('.accordion-content').toggle();
                    });
                }).fail(function() {
                    console.error('Error loading the JSON data');
                });
            } else {
                console.error('Invalid group value');
            }
        });
    });
</script>

