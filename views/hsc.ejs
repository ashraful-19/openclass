/* General Accordion Header */
.accordion-header {
    background-color: #f1f1f1;
    color: #444;
    cursor: pointer;
    padding: 15px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    font-size: 15px;
    transition: background-color 0.3s ease;
    position: relative;
   }
.accordion.accordion-subject{
  border-radius: 10px;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 0px 1px;
  margin-bottom: 10px;
}
.accordion-header:hover {
    background-color: #ccc;
}
.accordion-arrow {
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 6px solid #444; /* Arrow pointing down */
    display: inline-block;
    transition: transform 0.3s ease;
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
}

.accordion-header.active .accordion-arrow {
    transform: translateY(-50%) rotate(-90deg); /* Arrow pointing to the right */
}

/* General Accordion Content */
.accordion-content {
    display: none;
    overflow: hidden;
    background-color: #ffffff;
}

.accordion-content p {
    margin: 15px 0;
}

/* Styles for Subjects */
.accordion-subject .accordion-header {
    background-color: #ffffff;
}

.accordion-subject .accordion-content {
    margin-left: 0; /* Align with header */
}

/* Styles for Chapters */
.accordion-chapter {
    position: relative;
    padding-left: 40px; /* Space for the vertical line and dot */
    margin: 5px 0px 0px 0px; /* Space between chapters */
}

.accordion-chapter::before {
    content: '';
    position: absolute;
    left: 20px; /* Position of the vertical line */
    top: 0;
    bottom: 0;
    width: 1px;
    background-color: #c3c3c3;
    height: 110%;
}

.accordion-chapter::after {
    content: '';
    position: absolute;
    left: 15px; /* Position of the dot */
    top: 20px; /* Align the dot with the vertical line */
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: #ff006d;
}

/* Remove extra margin for the first child (root level) */
.accordion-subject:first-child .accordion-chapter::before {
    top: 0;
    bottom: 20px;
}

.accordion-chapter .accordion-header {
    background-color: #f9f9f9;
    border-radius: 0;
    width: 100%;
}

