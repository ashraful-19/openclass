      <script>
$(document).ready(function() {
  const contentDiv = $('#content');
  const loaderDiv = $('#content-loader');

  // Function to handle adding/removing the active class
  function updateActiveClass(selectedCategory) {
    // Remove .active from all nav items
    $('.nav-itemm').removeClass('active');
    $('#word-group-search option').removeAttr('selected');

    // Add .active to the clicked or selected nav item
    $(`.nav-itemm[data-value="${selectedCategory}"]`).addClass('active');
    $(`#word-group-search option[value="${selectedCategory}"]`).attr('selected', true);
  }

  function renderContent(categoryData) {
    contentDiv.empty(); // Clear existing content

    categoryData.forEach(item => {
      if (item.word) {
        contentDiv.append(`
          <div class="word">
            <div class="vocabulary-card">
              <h3 class="vocab-word">
                ${item.word.word} <span class="translation">- ${item.word.translation}</span>
              </h3>
              <div class="vocab-info">
                <span class="vocab-items"><strong>Synonyms: </strong> ${item.word.synonyms.join(', ')}</span>
                <span class="vocab-items"><strong>Antonyms: </strong> ${item.word.antonyms.join(', ')}</span>
              </div>
            </div>
            <button class="toggle-story">বিস্তারিত</button>
            <div class="story-block">${item.word['story-block']}</div>
          </div>`);
      } else if (item.title) {
        contentDiv.append(`<div class="title"><h2>${item.title}</h2></div>`);
      } else if (item['title-extra']) {
        contentDiv.append(`
         <div class="title-extra">
        ${item['title-extra'].title ? `<h2>${item['title-extra'].title}</h2>` : ''}
        ${item['title-extra'].content ? `<span class="extra-content">${item['title-extra'].content}<br></span>` : ''}
        ${item['title-extra'].image ? `<img src="${item['title-extra'].image}" style="border-radius: 8px; width: 100%!important">` : ''}
      </div>`);
      }
    });

    // Add event listener for toggle buttons
    $('.toggle-story').on('click', function() {
      $(this).next('.story-block').slideToggle(); // Toggle the story block visibility
    });
  }

  function loadContent(category) {
    // Show loader
    loaderDiv.show();
    contentDiv.hide();

    // Update active class
    updateActiveClass(category);

    // Simulate loading with a 3-second delay
    setTimeout(() => {
      $.getJSON('/data/word.json', function(data) {
        renderContent(data[category]);
        // Hide loader and show content
        loaderDiv.hide();
        contentDiv.show();
      });
    }, 1000); // 3 seconds delay
  }

  // Initial load - set the first item as active
  const initialCategory = 'Medical'; // Default selection
  loadContent(initialCategory); // Load content for the initial category

  // Handle search filter dropdown change
  $('#word-group-search').on('change', function() {
    const selectedCategory = $(this).val();
    loadContent(selectedCategory);
  });

  // Handle side-nav click events
  $('.nav-itemm').on('click', function() {
    const selectedCategory = $(this).data('value');
    loadContent(selectedCategory);
  });
});

</script>

